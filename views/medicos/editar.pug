html 
    head
        link(
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" 
            integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" 
            crossorigin="anonymous"
        )
    body
        .container
            br
            form.form(action="/medicos?_method=PUT" method="post")
                .form-group
                    input(type="hidden", name="id" value = medico.id)
                    label Nombre 
                    input.form.form-control(type = "text" name = "nombre" value = medico.nombre)
                .form-group 
                    label Especialidad 
                    select.form.form-control(name="especialidad")
                        each especialidad in especialidades 
                            if especialidad.id == medico.especialidad
                                option(value = especialidad.id selected) #{especialidad.descripcion} 
                            else 
                                option(value = especialidad.id) #{especialidad.descripcion}
                .form-group 
                    label edad 
                    input.form.form-control(type="number" name="edad" value = medico.edad)
                .form-group 
                    input.form-control.btn.btn-primary(type="submit" value="modificar")