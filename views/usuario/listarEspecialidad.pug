html
    head
        link(rel="stylesheet", 
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        )
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")

        link(rel="stylesheet" 
            href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"
        )
        script(src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
            crossorigin="anonymous"
        )
        script(src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" 
            defer
        )
        script(defer).
            $(document).ready( function () {
                $('#tabla').DataTable();
            });
    body
        include ../partes/cabezera.pug
        .container
            div(style="display:flex;justify-content:space-between")
                h1 Gestion de especialidades
            br
            table#tabla
                thead
                    tr 
                        th ID
                        th Nombres
                        th
                tbody
                    each especialidad in especialidades
                        tr 
                            td=especialidad.id_especialidad
                            td=especialidad.nombre
                            td
                                form(action=`/especialidad/${especialidad.id_especialidad}` method="get")
                                    input.btn.btn-primary(type="submit" value="Editar")
                                    