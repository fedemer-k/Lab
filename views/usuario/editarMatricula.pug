html 
    head
        link(rel="stylesheet"
         href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" 
         integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" 
         crossorigin="anonymous")
         
        link(rel="stylesheet", 
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        )
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")

    body
        include ../partes/cabezera.pug
        .container
            div(style="justify-content:space-between")
                h1 Editando matricula #{matricula.nombre_especialidad}
                h4 Medico: #{medico.nombres} #{medico.apellidos} (#{medico.dni})
            br
            form.form(action=`/usuario/medico/matricula/editar/${medico.id_medico}/${matricula.id_matricula}` method="post" enctype="multipart/form-data")
                .form-group
                    label Matricula
                    input.form.form-control(type = "text" name = "matricula" value = matricula.matricula)
                .form-group
                    label Fecha de vencimiento
                    - var fech_ven = new Date(matricula.fecha_vencimiento).toISOString().split('T')[0]
                    input.form.form-control(type = "date" name = "fecha_vencimiento" value = fech_ven)
                .form-group 
                    input.form-control.btn.btn-primary(type="submit" value="alta")