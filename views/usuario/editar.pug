html 
    head
        link(rel="stylesheet"
         href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" 
         integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" 
         crossorigin="anonymous")
         
        link(rel="stylesheet", 
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        )
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")

    body
        include ../partes/cabezera.pug
        .container
            div(style="display:flex;justify-content:space-between")
                h1 Modificacion de usuario
            br
            form.form(action="/usuario?_method=PUT" method="post" enctype="multipart/form-data")
                .form-group
                    input(type="hidden", name="id_usuario" value = usuario.id_usuario)
                    label DNI (Como figura en el documento)
                    input.form.form-control(type = "number" name = "dni" value = usuario.dni)
                .form-group
                    label Nombres (Nombre visible)
                    input.form.form-control(type = "text" name = "nombres" value = usuario.nombres)
                .form-group
                    label Apellidos
                    input.form.form-control(type = "text" name = "apellidos" value = usuario.apellidos)
                .form-group
                    label Correo Electronico
                    input.form.form-control(type = "text" name = "correo" value = usuario.correo)
                .form-group
                    label Fecha Nacimiento
                    input.form.form-control(type = "date" name = "fecha_nac" value = usuario.fecha_nac)
                .form-group
                    label Sexo
                    input.form.form-control(type = "text" name = "sexo" value = usuario.sexo)
                .form-group
                    label Sexo biologico (con fines medicinales)
                    .form-check 
                        input#aceptarSi.form-check-input(type="radio" name="sexo_biologico" value="1" checked=usuario.sexo_biologico === 1) 
                        label.form-check-label(for="aceptarSi") Masculino
                    .form-check 
                        input#aceptarNo.form-check-input(type="radio" name="sexo_biologico" value="0" checked=usuario.sexo_biologico === 0) 
                        label.form-check-label(for="aceptarNo") Femenino
                .form-group
                    label telefono
                    input.form.form-control(type = "number" name = "telefono" value = usuario.telefono)
                .form-group
                    label direcci√≥n
                    input.form.form-control(type = "text" name = "direccion" value = usuario.direccion)
                .form-group 
                    input.form-control.btn.btn-primary(type="submit" value="modificar")